---
version: "3.8"

services:
  adguardhome:
    image: adguard/adguardhome:v0.107.12
    container_name: adguardhome
    ports:
      - 53:53/tcp
      - 53:53/udp
      - 784:784/udp
      - 853:853/tcp
      - 3000:3000/tcp
      - 80:80/tcp
      - 443:443/tcp
    volumes:
      - "{{ docker_base_dir }}/adguardhome/work:/opt/adguardhome/work"
      - "{{ docker_base_dir }}/adguardhome/conf:/opt/adguardhome/conf"
    restart: unless-stopped
