---
version: "3.8"

services:
  homebridge:
    image: ghcr.io/oznu/homebridge:latest@sha256:defcd3b5b89d86ed44abe6d6b6d9e0393df1479da164c1ba88f0762586e81c54
    container_name: homebridge
    restart: always
    network_mode: host
    volumes:
      - "{{ docker_base_dir }}/homebridge/config:/homebridge"
    logging:
      driver: json-file
      options:
        max-size: "10mb"
        max-file: "1"